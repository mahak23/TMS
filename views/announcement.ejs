
    <form action="/add/announcement" method="POST">

      <input class="form-control"  id ="heading" type="text" name="heading" placeholder="enter announcement heading">
      
      <textarea class="form-control" id="description" name="description" placeholder="enter event description"></textarea>
      <button type="submit" class="btn btn-success submitEvent" value="submit">Send</button>
  </form>

  <script>
      var socket = io();
      console.log("hello");
      document.querySelector('.submitEvent').addEventListener('click',()=>{
      console.log("inside event listner")
      var heading = document.getElementById('heading').value;
      var description = document.getElementById('description').value;
      var event  = {heading,description};
      console.log(event);
      socket.emit('addEvent',event);
  })
  </script>
